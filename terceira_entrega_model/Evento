   			// Date when the event begun.
    		dataInicio -> eventBeginDate

    		// Date when the event is over.
    		dataTermino -> eventEndDate

    		// Store the image of the event.
    		imagem -> eventImage
    		
    		// Price that a man has to pay for the event.
    		precoMasc -> masculineEventPrice
    		
    		// Price that a woman has to pay for the event	
    		precoFem -> femaleEventPrice
    		
    		// Store the person that is organizing the event.
